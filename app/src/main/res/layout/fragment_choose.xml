<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choosepg"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/left" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="主界面"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择你要查询的成绩"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    " />

        <Button
            android:id="@+id/jwcjchaxun"
            android:layout_width="360dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:background="@drawable/btn_login"
            android:text="教务系统成绩查询"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/hot" />

    </LinearLayout>

    <Button
        android:id="@+id/sljchaxun"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:background="@drawable/btn_login"
        android:text="英语四六级"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/pthchaxun"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:background="@drawable/btn_login"
        android:text="普通话水平测试"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/djchaxun"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:background="@drawable/btn_login"
        android:text="计算机等级考试查询"
        android:textColor="#000000"
        android:textSize="20dp" />


</LinearLayout>